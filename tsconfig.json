{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["**/*.ts"],
  "ts-node": { "esm": true, "experimentalSpecifierResolution": "node" }
}
